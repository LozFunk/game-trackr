<%- include ('partials/header') %>

<body>
<header class="hero">
  <div class="hero-content">
    <h1>Welcome to <span class="highlight">GameTrackr</span></h1>
    <p class="subtitle">
      Discover new games, track what you own, and build your ultimate library.
    </p>

    <% if (!user) { %>
      <div class="hero-buttons">
        <a href="/register" class="button primary">Get Started</a>
        <a href="/login" class="button secondary">Login</a>
      </div>
    <% } else { %>
      <div class="hero-buttons">
        <a href="/games" class="button primary">Browse Games</a>
        <a href="/profile" class="button secondary">My Library</a>
      </div>
    <% } %>
  </div>
</header>

  <main class="features">
    <section class="feature">
      <img src="/images/browse.svg" alt="Browse Games" />
      <h2>Browse Thousands of Games</h2>
      <p>
