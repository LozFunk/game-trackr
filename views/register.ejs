<%- include('partials/header') %>

<section>
<div>
  <h1>Registration</h1>

 
<!-- Makes POST request to /register route -->
<div class="form-container">
    <form action="/register" method="POST">
        <div>
            <label for="username" hidden>Username</label>
            <input class="input-field" type="text" placeholder="Username" name="username" required>
        </div>
        <div>
            <label for="email" hidden>Email</label>
            <input class="input-field" type="email" name="email" placeholder="Email" required>
        </div>
        <div>
            <label for="password" hidden>Password</label>
            <input class="input-field" type="password" name="password" placeholder="Password" required>
        </div>
        <div>
            <label for="repeatPassword" hidden>Password</label>
            <input class="input-field" type="password" name="repeatPassword" placeholder="Repeat your password" required>
        </div>

        <div>
            <button class="button register-btn" type="submit">Register</button>
        </div>
    </form>

    <div>
        <a class="" href="/auth/google" role="button">
        <i class=""></i>
        Sign Up with Google
        </a>
    </div>

    <div><p>Already have an account? <a href="/login">Login

    </a></p></div>
</div>


  
</div>
</section>

<%- include('partials/footer') %>